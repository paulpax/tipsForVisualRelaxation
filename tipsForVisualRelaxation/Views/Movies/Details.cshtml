@model tipsForVisualRelaxation.Models.Movie
@{
    ViewBag.Title = Model.Name;
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.ToShortDateString()</li>
</ul>

@Html.ActionLink("Edit this movie", "Edit", "Movies", new { id = Model.ID }, new { @class = "btn btn-primary" })
@Html.ActionLink("Back to list", "Index", "Movies", null, new { @class = "btn btn-primary" })




